# Expiration des données
------------------------

<IfModule mod_expires.c>
  ExpiresActive on

  # Durée par défaut
  ExpiresDefault                              "access plus 1 month"

  # HTML
  ExpiresByType html                          "access plus 0 seconds"

  # Favicon 
  ExpiresByType jpg                           "access plus 1 year"

  # Images, audio et vidéo
  ExpiresByType img/gif                       "access plus 1 month"
  ExpiresByType img/png                       "access plus 1 month"
  ExpiresByType img/jpg                       "access plus 1 month"

  # Fonts
  ExpiresByType fonts/otf                     "access plus 1 month"
  ExpiresByType fonts/svg                     "access plus 1 month"
  ExpiresByType fonts/ttf                     "access plus 1 month"
  ExpiresByType fonts/woff                    "access plus 1 month"
  ExpiresByType fonts/woff2                   "access plus 1 month"
  ExpiresByType fonts/eot                     "access plus 1 month"

  # CSS et JavaScript
  ExpiresByType css                           "access plus 1 month"
  ExpiresByType css/css                       "access plus 1 month"
  ExpiresByType js/js                         "access plus 1 month"

</IfModule>


# BEGIN Cache-Control Headers
-----------------------------

<IfModule mod_headers.c>
<FilesMatch "\.(ico|jpg|png|gif|swf|css|gz|js|woff|woff2)$">
Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

<FilesMatch "\.(js)$">
Header set Cache-Control "max-age=2592000, private"
</FilesMatch>

<filesMatch "\.(html|htm)$">
Header set Cache-Control "max-age=7200, public"
</filesMatch>

# Enleve le cache pour les ressources dynamiques
<FilesMatch "\.(pl|php|cgi|spl|scgi|fcgi)$">
Header unset Cache-Control
</FilesMatch>
</IfModule>
# END Cache-Control Headers